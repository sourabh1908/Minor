
<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
		<div class=" col-md-12 text-center p-3">
			 <h1>Edit <%= user.username%>'s Profile</h1>
		</div>
        <div class="px-4" style=" margin: 25px auto;">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST"><!--changge done in ENCTYPE-->
                <div class="form-group">
                    <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="user[email]" value="<%= user.email %>">
                </div>
				 <div class="form-group">
                    <input class="form-control" type="text" name="user[avatar]"  value="<%=user.avatar%>">
                </div>
				<div class="form-group">
                    <textarea class="form-control" name="user[about]"  rows="5" cols="70"><%= user.about %></textarea>
                </div>
				
				<div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="users/<%=user._id%>">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %> 